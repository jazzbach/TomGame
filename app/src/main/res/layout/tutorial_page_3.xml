<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/tutorial_bg">

    <ImageView
        android:id="@+id/tutorial_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/bat"
        android:background="@android:color/transparent"/>
    <TextView
        android:id="@+id/tutorial_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tutorial_image"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/dot_sactive"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Increase your damage!"/>
    <TextView
        android:id="@+id/tutorial_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tutorial_title"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/dot_sactive"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textAlignment="center"
        android:text="@string/tutorial_3"/>
</RelativeLayout>